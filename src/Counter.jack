class Counter {
	field int count;

	constructor Counter new() {
		let count = 0;
		return this;
	}

	method void dispose() {
		 do Memory.deAlloc(this);
		 return;
	}

	method void add() {
		let count = count + 1 ;
		return;
	}

	method void reset() {
		let count = 0;
		return;
	}

	method void draw() {
		do Output.moveCursor(22,7);
        do Output.printInt(count);
		return;
	}

	method int getCount() { return count; }
}